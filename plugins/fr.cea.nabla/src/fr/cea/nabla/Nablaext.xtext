grammar fr.cea.nabla.Nablaext
with fr.cea.nabla.Nabla

import "http://www.eclipse.org/emf/2002/Ecore" as ecore
import "http://www.cea.fr/nabla/Nabla" as nabla

generate nablaext "http://www.cea.fr/nabla/Nablaext"

NablaextRoot:
	providers += ExtensionProvider+;

ExtensionProvider: 'ExtensionProvider' name=ID ':' extension=[nabla::NablaExtension]
'{'
	'target' '=' target=TargetType ';'
	('compatibleTargets' '=' compatibleTargets+=TargetType (',' compatibleTargets+=TargetType)* ';')?
	'projectDir' '=' projectDir=STRING ';'
	'facadeClass' '=' facadeClass=STRING ';'
	'facadeNamespace' '=' facadeNamespace=STRING ';'
	'libName' '=' libName=STRING ';'
'}';

// Java must be the first enum literal to be the default value for interpreter
enum TargetType: Java | CppSequential | StlThread | OpenMP | Kokkos | KokkosTeamThread;

